<DialogPane prefHeight="0.0" prefWidth="663.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <GridPane prefHeight="190.0" prefWidth="663.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="315.39996337890625" minWidth="10.0" prefWidth="171.7999755859375" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="472.0" minWidth="10.0" prefWidth="470.4000244140625" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="58.0" prefWidth="77.0" text="Name">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label prefHeight="100.0" prefWidth="118.0" text="Check In" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label prefHeight="100.0" prefWidth="118.0" text="Check Out" GridPane.rowIndex="2">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Button fx:id="CancelButton" mnemonicParsing="false" text="Cancel">
                     <HBox.margin>
                        <Insets left="335.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="AddMemberButton" mnemonicParsing="false" onAction="#AddMemberButtonAction" text="Add">
